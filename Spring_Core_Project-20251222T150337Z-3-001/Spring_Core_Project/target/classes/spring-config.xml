<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean class="example.spring.core.HelloService" id="myBean"/>
	
	<bean class="example.spring.core.UserService" id="myBean2">
		<property name="userName" value="Jack"/>
		<property name="userAge" value="70"/>
	</bean>
	<bean class="example.spring.core.UserService" id="myBean3">
		<constructor-arg value="Ana" index="1"/>
		<constructor-arg value="45" index="0"/>
	</bean>
</beans>